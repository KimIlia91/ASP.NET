@model RegisterViewModel

<h1 class="text-info">Register</h1>

<form asp-controller="Account" asp-action="Register" method="post" role="form">
    <h4>Create a new account</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="RoleList" hidden />
    <div class="form-group m-3">
        <label asp-for="Email" class="mb-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <label asp-for="Name" class="mt-3 mb-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <label asp-for="Password" class="mt-3 mb-2"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <label asp-for="ConfirmPassword" class="mt-3 mb-2"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <label asp-for="RoleSelected" class="mt-3 mb-2"></label>
        <div class="col-md-10">
            <select asp-for="RoleSelected" asp-items="@Model.RoleList" class="form-control">
                <option disabled selected>--Select role--</option>
            </select>
            <span asp-validation-for="RoleSelected" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 mt-2 m-3">
            <button type="submit" class="btn btn-success form-control">Register</button>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}