@model IEnumerable<MagicVilla_Web.Models.Dto.VillaDto>

<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa list</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary">
                <i class="bi bi-house-add" style="font-size:25px"></i>&nbsp; 
                <div class="col">Create new villa</div>
                </a>
        </div>
    </div>
    <br/>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Occupany</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td width="48%">@item.Name</td>
                <td width="20%">@item.Occupancy</td>
                <td width="20%">@item.Rate</td>
                <td class="text-end">
                    <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@item.Id" class="btn btn-success">
                            <i class="bi bi-house-gear" style="font-size:26px"></i></a>
                    <a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaId="@item.Id" class="btn btn-danger">
                        <i class="bi bi-house-slash" style="font-size:26px"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>